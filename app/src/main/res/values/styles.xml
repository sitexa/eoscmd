<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPlactal</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="fontFamily">@font/droidsansmono</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentBack" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="fontFamily">@font/droidsansmono</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ToolBarFont" parent="@style/TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/droidsansmono</item>
        <item name="fontFamily">@font/droidsansmono</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <style name="EosNameText" parent="@style/Widget.AppCompat.EditText" >
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">13</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:digits">.12345abcdefghijklmnopqrstuvwxyz</item>
    </style>

    <style name="EosNameTextWithNext" parent="@style/EosNameText" >
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EosNameTextWithDone" parent="@style/EosNameText" >
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EosNameTextWithSearch" parent="@style/EosNameText" >
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>
</resources>
